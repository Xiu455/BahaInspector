{
  "name": "BahaInspector",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "react": "cd renderer && npx vite",
    "electron": "chcp 65001 && electron .",
    "dev": "concurrently \"npm:electron\" \"npm:react\"",
    "vite:build": "cd renderer && npx vite build",
    "build": "cd renderer && npx vite build && cd ../ && electron-builder",
    "install:all": "npm install && cd renderer && npm install"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "BahaInspector",
    "directories": {
      "output": "pack"
    },
    "files": [
      "**/*",
      "!.vscode",
      "!renderer",
      "!pack",
      "!LICENSE",
      "!Electron API.md",
      "!README.md"
    ],
    "asar": false,
    "win": {
      "target": [
        "portable",
        "dir"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "it's a app",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3"
  },
  "charset": "UTF-8",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.0",
    "electron-is-dev": "^2.0.0",
    "json2csv": "^6.0.0-alpha.2",
    "sass": "^1.89.2"
  }
}
